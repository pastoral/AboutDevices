<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:id="@+id/hotline">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="110dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardBackgroundColor="#FFFFFF"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="4dp">

        <!-- android:layout_margin="1dp" -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <ImageView
                android:id="@+id/countryImage"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:scaleType="centerCrop"
                android:layout_centerInParent="true"
                android:src="@drawable/hotlines"

                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="50dp"
                android:background="#ffffff"
                android:alpha=".6">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="19sp"
                    android:text="Hotline Numbers"
                    android:id="@+id/hotlinetext"
                    android:layout_marginLeft="7dp"
                    android:textColor="#000003"

                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorViewLine"
                    android:layout_margin="1dp"
                    android:id="@+id/hotlineview"
                    android:layout_below="@+id/hotlinetext"

                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/hotlinelayout1"
                    android:id="@+id/hotlinelayout2"
                    android:layout_marginTop="6dp"

                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="Hotline 2 : "
                        android:id="@+id/hotlinephone2"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="3dp"
                        android:textColor="@color/colorHomeCardText"

                        />

                    <!--  <ImageView
                          android:layout_width="40dp"
                          android:layout_height="40dp"
                          android:layout_toEndOf ="@+id/hotlinephone2"
                          android:layout_alignBottom="@+id/hotlinephone2"
                          android:src="@drawable/phoneicon"
                          android:id="@+id/phoneicon2"
                          android:onClick="callHotline2"

                          /> -->
                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:background="@drawable/textchips"
                        android:layout_alignParentLeft="true"
                        android:onClick="callHotline2"
                        android:layout_marginBottom="3dp"

                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorHomeCardText"
                            android:textSize="17sp"
                            android:text=" 09666700666"
                            android:textStyle="bold"
                            android:padding="2dp" />

                        <ImageView
                            android:layout_height="25dp"
                            android:layout_width="25dp"
                            android:src="@drawable/phoneicon"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="5dp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/hotlineview"
                    android:id="@+id/hotlinelayout1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="Hotline 1 : "
                        android:id="@+id/hotlinephone1"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="3dp"
                        android:textColor="@color/colorHomeCardText"

                        />
                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:background="@drawable/textchips"
                        android:layout_alignParentLeft="true"
                        android:onClick="callHotline1"

                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorHomeCardText"
                            android:textSize="17sp"
                            android:text="16272"
                            android:textStyle="bold"
                            android:padding="2dp" />

                        <ImageView
                            android:layout_height="25dp"
                            android:layout_width="25dp"
                            android:src="@drawable/phoneicon"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="5dp" />
                    </LinearLayout>
                </LinearLayout>


            </RelativeLayout>





        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
